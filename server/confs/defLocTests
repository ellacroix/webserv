server {

	listen	8001 

	server_name blaexamplebobbla.fr 
	root /data/
	client_max_body_size 100k
	index index.html
	error_page 400  403 40x.html

	location / {
		root /data/www 
		error_page 405 405.html
	}

	location /images/ {
		index index2.html
		autoindex on
	}

}

